{
  "Routes": [
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/one/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "OneApi",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UseServiceDiscovery": true,
      //如果不加就不需要验证
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "TestKey",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/two/{everything}",
      "UpstreamHttpMethod": [ "Get" ],
      "ServiceName": "TwoApi",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UseServiceDiscovery": true
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/contact/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "ServiceName": "ContactApi",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UseServiceDiscovery": true,
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "TestKey",
        "AllowedScopes": []
      }
    },
    {
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/user/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "ServiceName": "UserApi",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UseServiceDiscovery": true
      //"AuthenticationOptions": {
      //  "AuthenticationProviderKey": "TestKey",
      //  "AllowedScopes": [""]
      //}
    },
    {
      "DownstreamPathTemplate": "/.well-known/{catchAll}",
      "DownstreamScheme": "http",
      "ServiceName": "IdentityApi",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/.well-known/{catchAll}",
      "UpstreamHttpMethod": [ "Get" ]
    },
    //授权网关
    {
      "DownstreamPathTemplate": "/connect/{catchAll}",
      "DownstreamScheme": "http",
      "ServiceName": "IdentityApi",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UseServiceDiscovery": true,
      "UpstreamPathTemplate": "/connect/{catchAll}",
      "UpstreamHttpMethod": [ "Post" ]
    }
