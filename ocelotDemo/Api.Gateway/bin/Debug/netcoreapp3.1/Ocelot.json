    //  "UpstreamHttpMethod": [ "Get", "Post" ]
    //}
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://192.168.1.165:61114", //网关所在地址
    "RequestIdKey": "OcelotRequestId",
    "ServiceDiscoveryProvider": {
      "Scheme": "http",
      "Host": "192.168.1.165",
      "Port": 8500,
      "Type": "Consul",
      "ConfigurationKey": "Ocelot_A",
      "PollingInterval": 30
    }
